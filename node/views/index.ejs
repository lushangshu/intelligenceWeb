<script>

    function filter1(){
        var text1 = document.getElementById("1a1").value;

        if((text1.replace(/\s/g, "")).length==0){
            alert("Query not in format");
            return false;
        }

        if(text1.length>30) {
            alert("too long!");
            return false;
        }
    }    


</script>
